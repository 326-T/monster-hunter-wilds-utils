{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"files": {
		"ignore": [
			"dist",
			"node_modules",
			"tools/tesstrain/.venv",
			"tools/ocr-dataset"
		]
	},
	"overrides": [
		{
			"include": ["src/components/ui/label.tsx"],
			"linter": {
				"rules": {
					"a11y": {
						"noLabelWithoutControl": "off"
					}
				}
			}
		}
	]
}
